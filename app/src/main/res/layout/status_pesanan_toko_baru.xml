<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ini baru"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/backgroundlist"
        android:onClick="onKonBar">

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@drawable/foods"
            android:id="@+id/gambarjasa"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gambarjasa"
            android:orientation="vertical">
            <TextView
                android:id="@+id/section_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gambarjasa"
                android:paddingLeft="15dp"
                android:text="KATERING"
                android:textSize="22dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/section_label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:text="Luqman Ahmad"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/backgroundlist"
        android:onClick="onKonBar">

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@drawable/pakaian"
            android:id="@+id/gambarjasa1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gambarjasa1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/section_label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gambarjasa"
                android:paddingLeft="15dp"
                android:text="LAUNDRY"
                android:textSize="22dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/section_label3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:text="Suhada Ahmad"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>