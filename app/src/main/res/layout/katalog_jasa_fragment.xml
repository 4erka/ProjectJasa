<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jasa_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akujasa.jasacenter.KatalogJasaFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/pesanlayoutkategori">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroudsquare">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Paket / Item"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:id="@+id/jasaheader"/>
            <Button
                android:text="TAMBAH"
                android:textSize="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/jasaheader"
                android:layout_marginLeft="10dp"
                android:onClick="onJasaTambah"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundsquareitem"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuci Basah"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.000"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"/>
            </LinearLayout>
            <Button
                android:text="EDIT"
                android:textSize="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:id="@+id/pesantambah"
                android:layout_toLeftOf="@+id/pesantambah01"
                android:onClick="onJasaEdit"/>
            <Button
                android:text="HAPUS"
                android:textSize="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/pesantambah01"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundsquareitem"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuci Kering"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.000"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"/>
            </LinearLayout>
            <Button
                android:text="EDIT"
                android:textSize="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:id="@+id/pesantambah1"
                android:layout_toLeftOf="@+id/pesantambah11"
                android:onClick="onJasaEdit"/>
            <Button
                android:text="HAPUS"
                android:textSize="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/pesantambah11"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundsquareitem"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuci Setrika"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.000"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"/>
            </LinearLayout>
            <Button
                android:text="EDIT"
                android:textSize="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:id="@+id/pesantambah2"
                android:layout_toLeftOf="@+id/pesantambah21"
                android:onClick="onJasaEdit"/>
            <Button
                android:text="HAPUS"
                android:textSize="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/pesantambah21"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
