<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jasa_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akujasa.jasacenter.KatalogJasaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/pesanlayoutkategori">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroudsquare">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Paket / Item"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:id="@+id/jasaheader"/>
            <Button
                android:text="TAMBAH"
                android:textSize="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/jasaheader"
                android:layout_marginLeft="10dp"
                android:onClick="onJasaTambah"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/listkatalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
        <!--android:id="@+id/android:list"-->

    </LinearLayout>
</RelativeLayout>
